{
  "id": "eu.jeroensomhorst.darkskyweather",
  "version": "0.0.7",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Dark Sky Weather",
    "nl": "Dark Sky Weather",
    "de": "Dark Sky Weather"
  },
  "description": {
    "en": "Get weather info using Dark Sky",
    "nl": "Get weather info using Dark Sky",
    "de": "Wettervorhersagen unter Dark Sky"
  },
  "category": [
    "climate"
  ],
  "permissions": [
    "homey:manager:geolocation"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Jeroen Somhorst",
    "email": "j.somhorst@gmail.com"
  },
  "capabilities": {
    "measure_uvindex_capability": {
      "type": "number",
      "title": {
        "en": "UV-index",
        "nl": "Zonkracht",
        "de": "UV-index"
      },
      "getable": true,
      "setable": false,
      "icon": "/assets/cap_measure_uvindex.svg"
    },
    "measure_apparent_temperature_capability": {
      "type": "number",
      "title": {
        "nl": "Gevoelstemperatuur",
        "en": "Wind chill",
        "de": "Gefühlte Temperatur"
      },"units": {
        "en": "°C",
        "nl": "°C",
        "de": "°C"
      },
      "getable": true,
      "setable": false,
      "icon": "/assets/cap_apparent_temperature.svg"
    },
    "measure_visibility_capability": {
      "type": "number",
      "title": {
        "en": "Visibility",
        "nl": "Zichtbaarheid",
        "de": "Sicht"
      },
      "units": {
        "en": "km",
        "nl": "km",
        "de": "km"
      },
      "getable": true,
      "setable": false,
      "icon": "/assets/cap_measure_visibility.svg"
    },
    "measure_temperature_high_capability": {
      "type": "number",
      "title": {
        "nl": "Verwachte hoogste dagtemperatuur",
        "en": "Highest expected temperature",
        "de": "Erwartete Höchsttemperatur"
      },
      "units": {
        "en": "°C",
        "nl": "°C",
        "de": "°C"
      },
      "getable": true,
      "setable": false,
      "icon": "/assets/cap_apparent_temperature.svg"
    },
    "measure_temperature_low_capability": {
      "type": "number",
      "title": {
        "nl": "Verwachte laagste dagtemperatuur",
        "en": "Lowest expected temperature",
        "de": "Erwartete Tiefsttemperatur"
      },
      "units": {
        "en": "°C",
        "nl": "°C",
        "de": "°C"
      },
      "getable": true,
      "setable": false,
      "icon": "/assets/cap_apparent_temperature.svg"
    },
    "measure_temperature_lowtime_capability": {
      "type": "string",
      "title": {
        "nl": "Tijd laagste dagtemperatuur",
        "en": "Time Lowest daytime temperature",
        "de": "Zeit der Tiefsttemperatur"
      },
      "getable": true,
      "setable": false,
      "icon": "/assets/cap_apparent_temperature.svg"
    },
    "measure_temperature_hightime_capability": {
      "type": "string",
      "title": {
        "nl": "Tijd hoogste dagtemperatuur",
        "en": "Time Highest temperature",
        "de": "Zeit der Höchsttemperatur"
      },
      "getable": true,
      "setable": false,
      "icon": "/assets/cap_apparent_temperature.svg"
    },
    "measure_cloudcover_capability": {
      "type": "number",
      "title": {
        "en": "Cloud coverage",
        "nl": "Bewolking",
        "de": "Wolkenbedeckung"
      },
      "getable": true,
      "setable": false,

      "units": {
        "en": "%",
        "nl": "%",
        "de": "%"
      },
      "icon": "/assets/cap_clouds.svg"
    }
  },
  "drivers": [
    {
      "id": "darksky_current_weather",
      "name": {
        "en": "Current weather",
        "nl": "Actueel weer",
        "de": "Aktuelle Wetterlage"
      },
      "class": "sensor",
      "capabilities": [
        "measure_temperature",
        "measure_humidity",
        "measure_pressure",
        "measure_rain",
        "measure_wind_strength",
        "measure_wind_angle",
        "measure_gust_strength",
        "measure_visibility_capability",
        "measure_uvindex_capability",
        "measure_apparent_temperature_capability",
        "measure_temperature_high_capability",
        "measure_temperature_low_capability",
        "measure_temperature_hightime_capability",
        "measure_temperature_lowtime_capability",
        "measure_cloudcover_capability"
      ],
      "pair": [
        {
          "id": "darksky_pair"
        }
      ],
      "settings": [
        {
        "type": "group",
        "label": {
          "en": "Darksky settings",
          "nl": "Darksky instellingen",
          "de": "Darksky Einstellungen"
        },
        "children": [
          {
          "id": "apikey",
          "type": "text",
          "value": "abcdefghijklmnopqrstuvwxyz",
          "label": {
            "en": "Darksky api key",
            "nl": "Darksky api sleutel",
            "de": "Darksky API-Schlüssel"
          },
          "hint": {
            "en": "An API key is required. You can obtain one at https://darksky.net/dev.",
            "nl": "Een API sleutel is verplicht. U kunt er een opvragen via https://darksky.net/dev.",
            "de": "Es wird ein API-Schlüssel benötigt. Sie können ihn beziehen bei https://darksky.net/dev."
          }
        },
          {
            "id": "longtitude",
            "type": "number",
            "value": 0,
            "min": -180,
            "max": 180,
            "label": {
              "en": "Longtitude",
              "nl": "Lengtegraad",
              "de": "Längengrad"
            }
          },
          {
            "id": "latitude",
            "type": "number",
            "value": 0,
            "min": -90,
            "max": 90,
            "label": {
              "en": "Latitude",
              "nl": "Breedtegraad",
              "de": "Breitengrad"
            }
          },
          {
            "id": "aboutlabel",
            "type": "label",
            "label": {
              "en": "Powered by Dark sky",
              "nl": "Powered by Dark sky",
              "de": "Powered by Dark sky"
            },
            "value": "Powered by Dark Sky "
          }
        ]
      }],
      "images": {
        "large": "drivers/darksky_current_weather/assets/images/large.png",
        "small": "drivers/darksky_current_weather/assets/images/small.png"
      }
    }
  ],
  "flow": {
    "triggers": [
  {
    "id": "measure_visibility_capability_trigger",
    "title": {
      "en": "Visibility has changed",
      "nl": "Zichtbaarheid is veranderd",
      "de": "Sichtbarkeit hat sich geändert"
    },
    "hint": {
      "en": "Triggers when the visibility changes.",
      "nl": "Triggert zodra de zichtbaarheid veranderd.",
      "de": "Auslöser wenn sich die Sicht ändert."
    },
    "args": [
      {
        "name": "device",
        "type": "device",
        "placeholder": {
          "en": "select",
          "nl": "selecteer",
          "de": "Auswahl"
        },
        "filter": "driver_id=darksky_current_weather"
      }
    ],
    "tokens": [
      {
        "name": "value",
        "type": "number",
        "title": {
          "en": "Temperature",
          "nl": "Temperatuur",
          "de": "Temperatur"
        }
      }]
  },
  {
